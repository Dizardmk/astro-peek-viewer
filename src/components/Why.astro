---
import data from "../data/index.json";
const s = data.why;
---

<section class="why section">
  <div class="container">
    <!-- title -->
    <h2 class="mb-6 section-title xl:mb-16" set:html={s.title} />

    <!-- list -->
    <ul
      class="flex max-xl:flex-col items-start justify-start gap-8 xl:items-center xl:justify-center">
      {s.list.map((item) => <li class="xl:w-141">{item.text}</li>)}
    </ul>

    <!-- subtitle -->
    <h3
      class="mt-6 mb-11 text-center xl:mt-16 text-[24px]/[1.2] font-semibold text-black">
      {s.subtitle}
    </h3>

    <!-- cards -->
    <ul
      class="grid grid-cols-1 gap-4 xl:max-w-241 xl:mx-auto xl:grid-cols-2 xl:items-stretch">
      {
        s.cards.map((card) => (
          // card
          <li class="flex xl:h-full flex-col xl:p-8 items-start justify-start gap-4 rounded-3xl bg-card p-4 font-inter">
            {/* wrapper for img and title */}
            <div class="flex items-center justify-start gap-3">
              {/* card image */}
              <img
                src={card.img}
                title={card.alt}
                alt={card.alt}
                width="40"
                height="40"
                loading="lazy"
              />
              {/* card title */}
              <h4 class="text-black font-semibold text-[18px]/[1.4]">
                {card.title}
              </h4>
            </div>

            {/* card text */}
            <p class="xl:text-base/normal">{card.text}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
