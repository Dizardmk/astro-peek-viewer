---
import data from "../data/index.json";
const s = data.header;
---

<header class="header max-md:pb-0! section bg-black text-white">
  <div class="container md:flex md:items-center md:justify-between md:gap-8">
    <!-- wrapper -->
    <div
      class="flex flex-col items-start md:w-93.75 justify-start gap-8 md:shrink-0">
      <!-- title -->
      <h1 class="section-title text-[32px]! max-md:mx-auto">{s.title}</h1>
      <!-- text -->
      <p class="text-[14px]/[1.4]">{s.text}</p>
      <!-- button -->
      <a
        class="btn"
        href={s.btn.link}
        target="_blank"
        rel="noopener noreferrer nofollow">
        {s.btn.title}
      </a>
    </div>

    <!-- image -->
    <picture>
      <source
        type="image/webp"
        media="(min-width: 768px)"
        srcset="/images/header/image-md.webp"
      />
      <img
        class="max-md:mt-5 relative max-md:left-1/2 max-md:right-1/2 max-md:-ml-[50vw] max-md:-mr-[50vw] max-md:w-screen max-md:max-w-none md:size-auto"
        src="/images/header/image-sm.webp"
        title="iphone mockup with Peekviewer Instagram Story Viewer app"
        alt="iphone mockup with Peekviewer Instagram Story Viewer app"
        width="360"
        height="346"
        loading="lazy"
      />
    </picture>
  </div>
</header>
