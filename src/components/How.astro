---
import data from "../data/index.json";
const s = data.how;
---

<section class="how bg-black section text-[#F0F1F2] xl:text-[#d4dcf3]">
  <div class="container">
    <!-- title -->
    <h2 class="section-title mb-6 text-white xl:mb-12.5" set:html={s.title} />

    <!-- wrapper -->
    <div class="xl:flex xl:items-center xl:justify-center xl:gap-26">
      <!-- wrapper -->
      <div
        class="flex flex-col items-center justify-center xl:w-123 xl:items-start xl:justify-start">
        <!-- text -->
        <p>
          {s.text}
        </p>
        <!-- points -->
        <ul
          class="mt-4 flex flex-col items-start justify-start gap-6 max-md:mb-1 xl:mt-16 xl:gap-11">
          {
            s.points.map((point) => (
              // point item
              <li class="flex items-center justify-center gap-5 font-inter">
                {/* point number */}
                <p
                  class="flex h-11.5 w-13 shrink-0 items-center justify-center rounded-full bg-[#002b6b] px-5 py-3 text-lg/[1] font-medium text-white md:w-23.5 md:text-[#9dadff]"
                  set:html={point.number}
                />
                {/* point text */}
                <p class="text-[18px]/[1.6]">{point.text}</p>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- image -->
      <picture>
        <source
          type="image/webp"
          media="(min-width: 1280px)"
          srcset="/images/how/image-xl.png"
        />
        <img
          class="max-xl:mx-auto xl:h-auto xl:w-94.5"
          src="/images/how/image-sm.png"
          title="iphone with Peekviewer Instagram Story Viewer app"
          alt="iphone with Peekviewer Instagram Story Viewer app"
          width="310"
          height="611"
          loading="lazy"
        />
      </picture>
    </div>
  </div>
</section>
