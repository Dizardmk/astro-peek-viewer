---
import data from "../data/index.json";
const s = data.try;
---

<section class="try mb-10 bg-black text-[#f0f1f2]">
  <div class="container">
    <!-- wrapper -->
    <div
      class="try-wrapper flex flex-col items-center justify-center py-16 text-center">
      <!-- title -->
      <h2 class="section-title mb-6 text-white" set:html={s.title} />
      <!-- text -->
      <p class="font-inter">{s.text}</p>
      <!-- button -->
      <a class="mt-8 btn w-46" href={s.btn.link}>{s.btn.title}</a>
    </div>
  </div>
</section>
